<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <File>app.log</File>
        <encoder>
            <Pattern>%d %p %t %c - %m%n</Pattern>
        </encoder>
    </appender>
    <root level="debug">
        <appender-ref ref="FILE"/>
    </root>
</configuration>